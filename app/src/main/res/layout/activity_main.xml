<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <Button
            android:id="@+id/btn_today"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/mainbuttonstyle"
            android:text="@string/TodayExercise"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_myroutine"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/mainbuttonstyle"
            android:text="@string/MyRoutine"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_routine"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/mainbuttonstyle"
            android:text="@string/MakeRoutine"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_maderoutine"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/mainbuttonstyle"
            android:text="@string/WellKnownRoutine"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>